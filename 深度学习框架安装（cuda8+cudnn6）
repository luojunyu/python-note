apt-get update

#安装cuda

sudo apt-get update

sudo apt-get upgrade

cd cuda目录下

sudo su

sudo sh cuda_8.0.61_375.26_linux.run

sudo gedit ~/.bashrc

export PATH=/usr/local/cuda-8.0/bin:$PATH  
export LD_LIBRARY_PATH=/usr/local/cuda/lib64:$LD_LIBRARY_PATH

source ~/.bashrc

nvcc -V  测试cuda是否安装好

#安装cudnn
sudo cp include/cudnn.h /usr/local/cuda/include/ 

sudo cp lib64/* /usr/local/cuda_8.0/lib64   用tab

#安装TensorFlow
#进入清华镜像网站选择TensorFlow版本  https://mirrors.tuna.tsinghua.edu.cn/help/tensorflow/ 


#几个重要的包
sudo apt-get install python-pip
sudo apt-get install python3-pip
sudo pip install -U --pre setuptools wheel
sudo pip install -U --pre numpy scipy matplotlib scikit-learn scikit-image

#安装pycharm
添加源
sudo add-apt-repository ppa:mystic-mirage/pycharm
sudo apt update

安装收费的专业版
sudo apt install pycharm

安装免费的社区版 
sudo apt install pycharm-community

#安装vscode 
sudo add-apt-repository ppa:ubuntu-desktop/ubuntu-make

sudo apt-get update && sudo apt-get install ubuntu-make

umake web visual-studio-code


